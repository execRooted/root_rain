pkgname=droplet
pkgver=0.1.0
pkgrel=1
pkgdesc="An aesthetic droplet CLI program written in Rust"
arch=('x86_64')
url="https://github.com/yourusername/droplet"
license=('MIT')
depends=()
makedepends=('rust')
source=()
sha256sums=()

build() {
    # Copy project files from parent directory
    cp -r ../* .
    cargo build --release --locked
}

package() {
    cd "$srcdir"
    install -Dm755 target/release/droplet "$pkgdir/usr/bin/droplet"
    install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
}